{
  "name": "IO-framework",
  "description": "A CSS Framework.",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "homepage": "https://github.com/pasqualevitiello/IO-framework",
  "author": "Pasquale Vitiello http://pasqualevitiello.com/",
  "scripts": {
    "test": "xo",
    "run:sass": "node-sass -o css sass --output-style expanded",
    "run:sync": "rsync -azP -e \"ssh -p ${npm_config_IO_SSHPORT}\" --delete --exclude='sass/' --exclude='.*/' --exclude='.*' --exclude='node_modules/' --exclude='dist/' . \"${npm_config_IO_SYNCDEST}\"",
    "run:xo": "xo --fix || true",
    "minify:js": "rm -f assets/js/*.min.js; for f in assets/js/*.js; do short=${f%.js}; uglifyjs $f > $short.min.js; done",
    "run:js": "npm-run-all --silent --parallel run:xo minify:js",
    "build:js": "onchange 'assets/js/*.js' -e 'assets/js/*.min.js' -e 'assets/js/vendor' -i -w -- npm run run:js",
    "build:scss": "npm run run:sass && npm run run:sass -- -w",
    "build:css": "postcss --local-plugins -w -u css-mqpacker --css-mqpacker.sort autoprefixer -d . css/style.css",
    "sync": "onchange '**/*' -e 'dist' -e '.git' -e 'sass' -e 'languages' -e 'assets/js/*.min.js' -e 'css' -w -- npm run run:sync",
    "server": "browser-sync start --proxy $npm_config_IO_URL --host $npm_config_IO_URL --reload-delay 1000 --files '**/*.css'",
    "dirs": "mkdir -p css; touch css/style.css;",
    "zip": "find . -type f ! -path './tmp/*' ! -path './node_modules/*' ! -path './.git/*' ! -path './sass/*' ! -path './package.json' ! -path './.*' | zip dist/$npm_config_IO_SLUG.zip -@",
    "build": "npm run dirs -s; npm-run-all --silent --parallel build:*",
    "build-sync": "npm run dirs -s; npm-run-all --silent --parallel build:* sync",
    "build-server": "npm run dirs -s; npm-run-all --silent --parallel build:* server",
    "build-sync-server": "npm run dirs -s; npm-run-all --silent --parallel build:* sync server",
    "dist": "rm -rf dist; mkdir -p dist; npm run zip -s"
  },
  "devDependencies": {
    "autoprefixer": "latest",
    "browser-sync": "latest",
    "css-mqpacker": "latest",
    "node-sass": "latest",
    "npm-run-all": "latest",
    "onchange": "latest",
    "sass-mq": "latest",
    "uglify-js": "latest",
    "xo": "latest"
  },
  "xo": {
    "ignores": [
      "assets/js/vendor/**"
    ],
    "env": [
      "browser"
    ]
  }
}
